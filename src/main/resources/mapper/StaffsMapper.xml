<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tencent.dao.StaffsMapper">

    <resultMap id="StaffsMap" type="com.tencent.model.Staff">
        <constructor>
            <idArg column="id" javaType="java.lang.Long" name="id"/>
            <arg column="openid" javaType="java.lang.String" name="openid"/>
            <arg column="real_name" javaType="java.lang.String" name="realName"/>
            <arg column="mobile" javaType="java.lang.String" name="mobile"/>
            <arg column="role" javaType="java.lang.String" name="role"/>
            <arg column="department" javaType="java.lang.String" name="department"/>
            <arg column="status" javaType="java.lang.Integer" name="status"/>
            <arg column="last_update_at" javaType="java.time.LocalDateTime" name="lastUpdateAt"/>
            <arg column="created_at" javaType="java.time.LocalDateTime" name="createdAt"/>
        </constructor>
    </resultMap>

    <sql id="Staff_Columns">
        id, openid, real_name, mobile, role, department, status, last_update_at, created_at
    </sql>

    <select id="getById" resultMap="StaffsMap" parameterType="java.lang.Long">
        SELECT <include refid="Staff_Columns"/>
        FROM p_staffs
        WHERE id = #{id}
    </select>

    <select id="getByMobile" resultMap="StaffsMap" parameterType="java.lang.String">
        SELECT <include refid="Staff_Columns"/>
        FROM p_staffs
        WHERE mobile = #{mobile}
    </select>

    <select id="list" parameterType="com.tencent.vo.Staffs">
        SELECT id,
        real_name as name,
        mobile as phone,
        role,
        department,
        status,
        last_update_at as lastLogin
        FROM p_staffs
        <where>
            <if test="role != null and role != ''"> AND role = #{role}</if>
            <if test="status != null"> AND status = #{status}</if>
            <if test="department != null and department != ''"> AND department = #{department}</if>
            <if test="mobile != null and mobile != ''"> AND mobile = #{mobile}</if>
        </where>
        ORDER BY id DESC
        <if test="offset != null and size != null">
            LIMIT #{offset}, #{size}
        </if>
    </select>

    <select id="count">
        SELECT COUNT(1)
        FROM p_staffs
        <where>
            <if test="role != null and role != ''"> AND role = #{role}</if>
            <if test="status != null"> AND status = #{status}</if>
            <if test="department != null and department != ''"> AND department = #{department}</if>
            <if test="mobile != null and mobile != ''"> AND mobile = #{mobile}</if>
        </where>
    </select>

    <insert id="insert" parameterType="com.tencent.model.Staff">
        INSERT INTO p_staffs (openid, real_name, mobile, role, department, status)
        VALUES (#{openid}, #{realName}, #{mobile}, #{role}, #{department}, #{status})
    </insert>

    <update id="update" parameterType="com.tencent.model.Staff">
        UPDATE p_staffs
        <set>
            <if test="openid != null">openid = #{openid},</if>
            <if test="realName != null">real_name = #{realName},</if>
            <if test="mobile != null">mobile = #{mobile},</if>
            <if test="role != null">role = #{role},</if>
            <if test="department != null">department = #{department},</if>
            <if test="status != null">status = #{status},</if>
        </set>
        WHERE id = #{id}
    </update>

    <update id="updateStatus">
        UPDATE p_staffs SET status = #{status}
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Long">
        DELETE FROM p_staffs WHERE id = #{id}
    </delete>

    <select id="lastInsertId" resultType="long">
        SELECT LAST_INSERT_ID()
    </select>

</mapper>
