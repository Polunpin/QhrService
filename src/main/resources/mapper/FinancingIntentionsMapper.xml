<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tencent.dao.FinancingIntentionsMapper">

    <resultMap id="FinancingIntentionsMap" type="com.tencent.model.FinancingIntention">
        <constructor>
            <idArg column="id" javaType="java.lang.Long" name="id"/>
            <arg column="application_no" javaType="java.lang.String" name="applicationNo"/>
            <arg column="enterprise_id" javaType="java.lang.Long" name="enterpriseId"/>
            <arg column="user_id" javaType="java.lang.Long" name="userId"/>
            <arg column="expected_amount" javaType="java.math.BigDecimal" name="expectedAmount"/>
            <arg column="expected_term" javaType="java.lang.Integer" name="expectedTerm"/>
            <arg column="purpose" javaType="java.lang.String" name="purpose"/>
            <arg column="repayment_source" javaType="java.lang.String" name="repaymentSource"/>
            <arg column="guarantee_type" javaType="java.lang.String" name="guaranteeType"/>
            <arg column="target_product_id" javaType="java.lang.Long" name="targetProductId"/>
            <arg column="contact_mobile" javaType="java.lang.String" name="contactMobile"/>
            <arg column="status" javaType="java.lang.String" name="status"/>
            <arg column="refusal_reason" javaType="java.lang.String" name="refusalReason"/>
            <arg column="urgency_level" javaType="java.lang.Integer" name="urgencyLevel"/>
            <arg column="created_at" javaType="java.time.LocalDateTime" name="createdAt"/>
            <arg column="updated_at" javaType="java.time.LocalDateTime" name="updatedAt"/>
        </constructor>
    </resultMap>

    <sql id="FinancingIntention_Columns">
        id, application_no, enterprise_id, user_id, expected_amount, expected_term, purpose,
        repayment_source, guarantee_type, target_product_id, contact_mobile, status,
        refusal_reason, urgency_level, created_at, updated_at
    </sql>

    <select id="getById" resultMap="FinancingIntentionsMap" parameterType="java.lang.Long">
        SELECT <include refid="FinancingIntention_Columns"/>
        FROM y_financing_intentions
        WHERE id = #{id}
    </select>

    <select id="getByApplicationNo" resultMap="FinancingIntentionsMap" parameterType="java.lang.String">
        SELECT <include refid="FinancingIntention_Columns"/>
        FROM y_financing_intentions
        WHERE application_no = #{applicationNo}
    </select>

    <select id="list" resultMap="FinancingIntentionsMap">
        SELECT <include refid="FinancingIntention_Columns"/>
        FROM y_financing_intentions
        <where>
            <if test="enterpriseId != null"> AND enterprise_id = #{enterpriseId}</if>
            <if test="userId != null"> AND user_id = #{userId}</if>
            <if test="status != null and status != ''"> AND status = #{status}</if>
        </where>
        ORDER BY id DESC
        <if test="offset != null and size != null">
            LIMIT #{offset}, #{size}
        </if>
    </select>

    <select id="count">
        SELECT COUNT(1)
        FROM y_financing_intentions
        <where>
            <if test="enterpriseId != null"> AND enterprise_id = #{enterpriseId}</if>
            <if test="userId != null"> AND user_id = #{userId}</if>
            <if test="status != null and status != ''"> AND status = #{status}</if>
        </where>
    </select>

    <insert id="insert" parameterType="com.tencent.model.FinancingIntention">
        INSERT INTO y_financing_intentions (application_no, enterprise_id, user_id, expected_amount,
                                          expected_term, purpose, repayment_source, guarantee_type,
                                          target_product_id, contact_mobile, status, refusal_reason, urgency_level)
        VALUES (#{applicationNo}, #{enterpriseId}, #{userId}, #{expectedAmount},
                #{expectedTerm}, #{purpose}, #{repaymentSource}, #{guaranteeType},
                #{targetProductId}, #{contactMobile}, #{status}, #{refusalReason}, #{urgencyLevel})
    </insert>

    <update id="update" parameterType="com.tencent.model.FinancingIntention">
        UPDATE y_financing_intentions
        <set>
            <if test="enterpriseId != null">enterprise_id = #{enterpriseId},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="expectedAmount != null">expected_amount = #{expectedAmount},</if>
            <if test="expectedTerm != null">expected_term = #{expectedTerm},</if>
            <if test="purpose != null">purpose = #{purpose},</if>
            <if test="repaymentSource != null">repayment_source = #{repaymentSource},</if>
            <if test="guaranteeType != null">guarantee_type = #{guaranteeType},</if>
            <if test="targetProductId != null">target_product_id = #{targetProductId},</if>
            <if test="contactMobile != null">contact_mobile = #{contactMobile},</if>
            <if test="status != null">status = #{status},</if>
            <if test="refusalReason != null">refusal_reason = #{refusalReason},</if>
            <if test="urgencyLevel != null">urgency_level = #{urgencyLevel},</if>
        </set>
        WHERE id = #{id}
    </update>

    <update id="updateStatus">
        UPDATE y_financing_intentions
        SET status = #{status}, refusal_reason = #{refusalReason}
        WHERE id = #{id}
    </update>

    <update id="updateTargetProduct">
        UPDATE y_financing_intentions
        SET target_product_id = #{targetProductId}
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Long">
        DELETE FROM y_financing_intentions WHERE id = #{id}
    </delete>

    <select id="lastInsertId" resultType="long">
        SELECT LAST_INSERT_ID()
    </select>

</mapper>
