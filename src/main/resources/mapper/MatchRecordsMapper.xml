<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tencent.dao.MatchRecordsMapper">

    <resultMap id="MatchRecordsMap" type="com.tencent.model.MatchRecord">
        <constructor>
            <idArg column="id" javaType="java.lang.Long" name="id"/>
            <arg column="user_id" javaType="java.lang.String" name="userId"/>
            <arg column="enterprise_id" javaType="java.lang.Long" name="enterpriseId"/>
            <arg column="intention_id" javaType="java.lang.Long" name="intentionId"/>
            <arg column="product_ids" javaType="java.lang.String" name="productIds"/>
            <arg column="match_score" javaType="java.math.BigDecimal" name="matchScore"/>
            <arg column="risk_type" javaType="java.lang.String" name="riskType"/>
            <arg column="risk_level" javaType="java.lang.String" name="riskLevel"/>
            <arg column="status" javaType="java.lang.String" name="status"/>
            <arg column="created_at" javaType="java.time.LocalDateTime" name="createdAt"/>
        </constructor>
    </resultMap>

    <resultMap id="MatchRecordsVoMap" type="com.tencent.vo.MatchRecords">
        <id column="id" property="id"/>
        <result column="enterprise" property="enterprise"/>
        <result column="applicant" property="applicant"/>
        <result column="products" property="products"
                typeHandler="com.tencent.config.typehandler.MatchProductsTypeHandler"/>
        <result column="riskType" property="riskType"/>
        <result column="riskLevel" property="riskLevel"/>
        <result column="status" property="status"/>
        <result column="matchTime" property="matchTime"/>
    </resultMap>

    <sql id="MatchRecord_Columns">
        id, userId, enterprise_id, intention_id, product_ids, match_score,
        risk_type, risk_level, status, created_at
    </sql>

    <select id="getById" resultMap="MatchRecordsMap" parameterType="java.lang.Long">
        SELECT <include refid="MatchRecord_Columns"/>
        FROM y_match_records
        WHERE id = #{id}
    </select>

    <select id="list" parameterType="com.tencent.vo.MatchRecords" resultMap="MatchRecordsVoMap">
        select ymr.id,
        ye.full_name as enterprise,
        pu.real_name as applicant,
        ymr.product_ids as products,
        ymr.risk_type as riskType,
        ymr.risk_level as riskLevel,
        ymr.status as status,
        ymr.created_at as matchTime
        from y_match_records ymr
        left join p_users pu on ymr.user_id=pu.id
        left join y_enterprises ye on ymr.enterprise_id=ye.id
        <where>
            <if test="enterpriseId != null"> AND ymr.enterprise_id = #{enterpriseId}</if>
            <if test="intentionId != null"> AND ymr.intention_id = #{intentionId}</if>
            <if test="status != null and status != ''"> AND ymr.status = #{status}</if>
        </where>
        ORDER BY ymr.id DESC
        <if test="offset != null and size != null">
            LIMIT #{offset}, #{size}
        </if>
    </select>

    <select id="count">
        SELECT COUNT(1)
        FROM y_match_records
        <where>
            <if test="enterpriseId != null"> AND enterprise_id = #{enterpriseId}</if>
            <if test="intentionId != null"> AND intention_id = #{intentionId}</if>
            <if test="status != null and status != ''"> AND status = #{status}</if>
        </where>
    </select>

    <insert id="insert" parameterType="com.tencent.model.MatchRecord">
        INSERT INTO y_match_records (user_id, enterprise_id, intention_id, product_ids,
                                   match_score, risk_type, risk_level, status)
        VALUES (#{userId}, #{enterpriseId}, #{intentionId}, #{productIds},
                #{matchScore}, #{riskType}, #{riskLevel}, #{status})
    </insert>

    <update id="update" parameterType="com.tencent.model.MatchRecord">
        UPDATE y_match_records
        <set>
            <if test="enterpriseId != null">enterprise_id = #{enterpriseId},</if>
            <if test="intentionId != null">intention_id = #{intentionId},</if>
            <if test="productIds != null">product_ids = #{productIds},</if>
            <if test="matchScore != null">match_score = #{matchScore},</if>
            <if test="riskType != null">risk_type = #{riskType},</if>
            <if test="riskLevel != null">risk_level = #{riskLevel},</if>
            <if test="status != null">status = #{status},</if>
        </set>
        WHERE id = #{id}
    </update>

    <update id="updateStatus">
        UPDATE y_match_records SET status = #{status}
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Long">
        DELETE FROM y_match_records WHERE id = #{id}
    </delete>

    <select id="lastInsertId" resultType="long">
        SELECT LAST_INSERT_ID()
    </select>

</mapper>
